<h1><%= @camper.name %></h1>
<h3>Age: <%= @camper.age %></h3>

<% if @camper.activities.count > 0 %>
    <h3>Activities: </h3>
    <ul>
        <% @camper.camp_activities.each do |camp_activity|  %>
            <li><%= link_to camp_activity.activity.name, activity_path(camp_activity.activity)  %> at <%= camp_activity.pretty_time %> </li>
        <% end %>
    </ul>
<% else %>
    <h3>No upcoming activities</h3>
<% end %>

<%= link_to "Sign Up for an Activity", new_camp_activity_path %>