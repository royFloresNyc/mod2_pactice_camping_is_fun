<h1>Camper Form</h1>

<% if flash[:errors] %>
    <h3>Errors: </h3>
    <% flash[:errors].each do |error| %>
        <p><em> - <%= error %></em></p>
    <% end %>
<% end %>

<%= form_for @camper do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>

    <%= f.label :age %>
    <%= f.number_field :age %><br><br>

    <%= f.submit %>
<% end %>
